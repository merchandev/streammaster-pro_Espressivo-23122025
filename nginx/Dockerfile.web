FROM nginx:alpine

# Copiar configuración personalizada (ruta relativa al contexto de build que será la raíz del proyecto)
COPY nginx/web.conf /etc/nginx/conf.d/default.conf

# Copiar archivos del frontend directamente a la imagen
COPY frontend/ /usr/share/nginx/html/

# Asegurar permisos correctos
RUN chmod -R 755 /usr/share/nginx/html

EXPOSE 80
CMD ["nginx", "-g", "daemon off;"]
